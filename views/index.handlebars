<div class="container bg-warning pb-5">
  <div class="bg-warning text-center mt-0">
    <img src="../assets/img/burger.png" class="text-center w-40" />
    <h1 class="text-danger m-3">Eat-Da-Burger!</h1>
  </div>
  <div class="row">
    <div class="col-md-6 m-3">
      {{#each burger}}
      {{#unless devoured}}
      {{> burgers/burger-block}}
      {{/unless}}
      {{/each}}
    </div>
    <div class="col-md-6 delivered m-3">
      {{#each burger}}
      {{#if devoured}}
      {{> burgers/burger-block}}
      {{/if}}
      {{/each}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-center">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="bu">Burger Name:</label>
          <input type="text" id="bu" name="name">
        </div>

