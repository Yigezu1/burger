<div class="container">
  <div class="jumbotron">
    <h1>Burgers!</h1>
  </div>
  <ul>
    {{#each burger}}
    {{> burgers/burger-block}}
    {{/each}}
  </ul>

  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="bu">Burger Name:</label>
      <input type="text" id="bu" name="name">
    </div>

    <div class="form-group">
      <label for="devo">Devoured?</label><br>
      <input type="radio" name="devoured" value="1" checked> Devoured!<br>
      <input type="radio" name="devoured" value="0"> Not Devoured
    </div>

    <button type="submit">Add Burger</button>
  </form>

</div>